{
  "name": "nestjs-microservices-demo",
  "version": "1.0.0",
  "description": "NestJS Microservices Demo with gRPC and RabbitMQ",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "start:api-gateway": "npm run start --workspace=apps/api-gateway",
    "start:user-service": "npm run start --workspace=apps/user-service",
    "start:payment-service": "npm run start --workspace=apps/payment-service",
    "start:notification-service": "npm run start --workspace=apps/notification-service",
    "start:dev:api-gateway": "npm run start:dev --workspace=apps/api-gateway",
    "start:dev:user-service": "npm run start:dev --workspace=apps/user-service",
    "start:dev:payment-service": "npm run start:dev --workspace=apps/payment-service",
    "start:dev:notification-service": "npm run start:dev --workspace=apps/notification-service",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "proto:generate": "protoc --plugin=protoc-gen-ts_proto=./node_modules/.bin/protoc-gen-ts_proto --ts_proto_out=./libs/proto/src --ts_proto_opt=nestJs=true,addGrpcMetadata=true,outputEncodeMethods=false,outputJsonMethods=false,outputClientImpl=false -I./proto ./proto/*.proto",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --config jest.config.js --watch",
    "test:cov": "jest --config jest.config.js --coverage",
    "test:debug": "node --inspect-brk -r ts-node/register node_modules/.bin/jest --runInBand",
    "prisma:generate": "cd libs/prisma && npx prisma generate",
    "prisma:migrate": "cd libs/prisma && npx prisma migrate dev",
    "prisma:push": "cd libs/prisma && npx prisma db push"
  },
  "devDependencies": {
    "@nestjs/testing": "^10.3.0",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-proto": "^1.165.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
